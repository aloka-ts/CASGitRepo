<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sip-app
  PUBLIC "-//Java Community Process//DTD SIP Application 1.0//EN"
  "http://www.jcp.org/dtd/sip-app_1_0.dtd">

<sip-app>
<!-- Configuration parameters used by the SBBs -->
<context-param>
    <param-name>SBBServlet</param-name>
    <param-value>SBBServlet</param-value>
</context-param>

<!-- The following configuration defines listeners used by the SBB implementation -->
<listener>
    <listener-class>com.baypackets.ase.sbb.impl.SBBServlet</listener-class>
</listener>

<!--  The following sections list all the servlets used by the SBBS.-->
<servlet>
<servlet-name>SBBServlet</servlet-name>
<servlet-class>com.baypackets.ase.sbb.impl.SBBServlet</servlet-class>
<load-on-startup>1</load-on-startup>
</servlet>

</sip-app>
